}

.plain-list.muted{
  color: var(--muted);
}

/* Main */
.main{
  padding-top: var(--s4);
}

/* ------------------------------------------------------------
   Scrollable project images
   - horizontal scroll, snap points, subtle edges
   - image area is wide, “extends” into removed right column by
     simply occupying the full main column.
------------------------------------------------------------ */
.project{
  border-left: 1px solid transparent; /* keeps alignment feel */
}

.project-viewport{
  /* Visual breathing room similar to screenshot */
  padding: var(--s2) 0;
}

.scroller{
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: 100%;
  gap: var(--s3);

  overflow-x: auto;
  overflow-y: hidden;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;

  /* Subtle “frame” feeling */
  padding: 0 var(--s1) var(--s2);
  border-bottom: 1px solid transparent;
  cursor: grab;
}
.scroller:active{
  cursor: grabbing;
}

/* Make the image area feel centered + generous */
.slide{
  scroll-snap-align: center;
  margin: 0;
  min-height: 360px;
  display: grid;
  place-items: center;
}

.slide img{
  width: 100%;
  max-height: 62vh;
  object-fit: contain;

  /* Gentle presentation; avoid heavy styling */
  background: #f6f6f6;
}

/* Caption */
.project-meta{
  margin-top: var(--s2);
  padding-top: var(--s2);
  border-top: 1px solid var(--hairline);
}

.caption{
  margin: 0;
  color: var(--muted);
  font-size: var(--t-xs);
  letter-spacing: 0.02em;
  display: flex;
  gap: var(--s2);
  align-items: baseline;
  justify-content: space-between;
}

.count{
  color: var(--muted);
  white-space: nowrap;
}

/* Subtle scrollbar (leave mostly native, keep restrained) */
.scroller::-webkit-scrollbar{ height: 10px; }
.scroller::-webkit-scrollbar-track{ background: transparent; }
.scroller::-webkit-scrollbar-thumb{ background: #d9d9d9; border-radius: 999px; }
.scroller::-webkit-scrollbar-thumb:hover{ background: #c9c9c9; }

/* ------------------------------------------------------------
   Responsive behavior
------------------------------------------------------------ */

/* Large → medium: keep structure but loosen columns */
@media (max-width: 1100px){
  .head-center{
    grid-template-columns: 1fr;
  }

  .site-header .wrap{
    grid-template-columns: 1fr;
  }

  .site-main .wrap.grid{
    grid-template-columns: 1fr;
  }

  .sidebar{
    padding-top: var(--s2);
  }
}

/* Mobile: reduce padding, keep lists readable */
@media (max-width: 640px){
  .wrap{
    padding: var(--s3) var(--s2);
  }

  .two-col{
    grid-template-columns: 1fr;
  }

  .caption{
    flex-direction: column;
    align-items: flex-start;
    gap: var(--s0);
  }

  .slide img{
    max-height: 52vh;
  }
}
