/* styles.css */
/* ------------------------------------------------------------
   Editorial Grid / restrained studio aesthetic
   - System fonts (no external dependencies)
   - Left sidebar lists + wide image area spanning center/right
   - Scrollable (not carousel) project images using scroll-snap
------------------------------------------------------------ */

:root{
  --bg: #ffffff;
  --fg: #111111;
  --muted: #8a8a8a;
  --hairline: #e7e7e7;

  --wrap-max: 1280px;

  /* Spacing scale (kept simple + consistent) */
  --s-1: 0.25rem;
  --s0: 0.5rem;
  --s1: 0.75rem;
  --s2: 1rem;
  --s3: 1.5rem;
  --s4: 2rem;
  --s5: 3rem;

  /* Type scale */
  --t-xs: 0.75rem;
  --t-sm: 0.875rem;
  --t-md: 0.95rem;     /* slightly under 1rem feels “print” */
  --t-lg: 1.05rem;
  --t-xl: 1.25rem;

  --lh: 1.35;
  --lh-tight: 1.15;

  /* Column gap tuned for “editorial” */
  --gap: 1.5rem;
}

*{ box-sizing: border-box; }
html, body { height: 100%; }
body{
  margin: 0;
  background: var(--bg);
  color: var(--fg);

  /* System font stack with “institutional” feel */
  font-family: ui-sans-serif, system-ui, -apple-system, "Helvetica Neue", Helvetica, Arial, "Noto Sans", "Liberation Sans", sans-serif;
  font-size: var(--t-md);
  line-height: var(--lh);
  letter-spacing: 0.01em;
}

img{
  max-width: 100%;
  height: auto;
  display: block;
}

a{
  color: inherit;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-color 140ms ease, color 140ms ease;
}
a:hover{
  border-bottom-color: currentColor;
}
a:focus-visible{
  outline: 2px solid #000;
  outline-offset: 2px;
}

/* Skip link */
.skip-link{
  position: absolute;
  top: 0;
  left: 0;
  transform: translateY(-120%);
  background: #000;
  color: #fff;
  padding: var(--s1) var(--s2);
  z-index: 1000;
}
.skip-link:focus{
  transform: translateY(0);
}

/* Wrap */
.wrap{
  max-width: var(--wrap-max);
  margin: 0 auto;
  padding: var(--s4) var(--s3);
}

/* ------------------------------------------------------------
   Header layout
   - Left title block
   - Center 3-column editorial text
   - (Right column removed per request)
------------------------------------------------------------ */
.site-header .wrap{
  display: grid;
  grid-template-columns: 2.5fr 7.5fr;
  gap: var(--gap);
  align-items: start;
  border-bottom: 1px solid var(--hairline);
  padding-bottom: var(--s4);
}

.site-title{
  margin: 0 0 var(--s0);
  font-size: var(--t-sm);
  font-weight: 600;
  letter-spacing: 0.06em;
}

.site-subtitle{
  margin: 0;
  font-size: var(--t-sm);
  color: var(--fg);
}

.head-center{
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: var(--gap);
}

.head-center p{
  margin: 0;
  color: var(--muted);
  font-size: var(--t-sm);
  line-height: 1.4;
}

/* ------------------------------------------------------------
   Main grid
   - Sidebar (left)
   - Main content (right) spans into removed right text area
------------------------------------------------------------ */
.site-main .wrap.grid{
  display: grid;
  grid-template-columns: 3.2fr 8.8fr;
  gap: var(--gap);
  align-items: start;
}

/* Sidebar lists */
.sidebar{
  padding-top: var(--s4);
}

.list-block + .list-block{
  margin-top: var(--s4);
}

.block-title{
  margin: 0 0 var(--s2);
  font-size: var(--t-sm);
  font-weight: 700;
  letter-spacing: 0.04em;
}

.two-col{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--gap);
}

.plain-list{
  list-style: none;
  padding: 0;
